{
  "name": "iris-io-utility",
  "displayName": "IRIS IO Utility",
  "description": "This is an utility extension to connect and interact with the tables of an InterSystems IRIS database",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iris-io-container",
          "title": "IRIS IO Utility",
          "icon": "src/resources/icon.svg"
        }
      ]
    },
    "views": {
      "iris-io-container": [
        {
          "id": "irisIOConnections",
          "name": "CONNECTIONS",
          "visibility": "visible",
          "icon": "src/resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "irisIOConnections",
        "contents": "No connections configured yet.\n[Add New Connection](command:irisIO.addConnection)\nYou can add IRIS database connections to quickly access your instances.\n\nConnections are saved per workspace and will persist across sessions."
      }
    ],
    "commands": [
      {
        "command": "irisIO.addConnection",
        "title": "Add New Connection",
        "icon": "$(add)"
      },
      {
        "command": "irisIO.editConnection",
        "title": "Edit Connection",
        "icon": "$(edit)"
      },
      {
        "command": "irisIO.deleteConnection",
        "title": "Delete Connection",
        "icon": "$(trash)"
      },
      {
        "command": "irisIO.connectToIris",
        "title": "Connect to IRIS",
        "icon": "$(plug)"
      },
      {
        "command": "irisIO.disconnectFromIris",
        "title": "Disconnect from IRIS",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "irisIO.importTables",
        "title": "Import Tables",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "irisIO.exportTables",
        "title": "Export Tables",
        "icon": "$(cloud-download)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "irisIO.addConnection",
          "when": "view == irisIOConnections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "irisIO.connectToIris",
          "when": "view == irisIOConnections && viewItem == idle",
          "group": "inline@1"
        },
        {
          "command": "irisIO.connectToIris",
          "when": "view == irisIOConnections && viewItem == error",
          "group": "inline@1"
        },
        {
          "command": "irisIO.disconnectFromIris",
          "when": "view == irisIOConnections && viewItem == connected",
          "group": "inline@1"
        },
        {
          "command": "irisIO.editConnection",
          "when": "view == irisIOConnections",
          "group": "inline@2"
        },
        {
          "command": "irisIO.deleteConnection",
          "when": "view == irisIOConnections",
          "group": "inline@3"
        },
        {
          "command": "irisIO.importTables",
          "when": "view == irisIOConnections && viewItem == connected",
          "group": "inline@4"
        },
        {
          "command": "irisIO.exportTables",
          "when": "view == irisIOConnections && viewItem == connected",
          "group": "inline@5"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@intersystems/intersystems-iris-native": "^2.0.3"
  }
}
